<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/league_list_item_layout">

    <TextView
            android:text="League"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/league_id_text_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:textStyle="bold"/>
    <TextView
            android:text="League Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/league_description_text_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/league_id_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            android:ellipsize="end" android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>